<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/daily_weather_item_background_with_border_radius">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/day_forecast_day_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hoy"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/day_forecast_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="27/12"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center|start"
        android:padding="8dp"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/day_forecast_weather_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/sun_weather_background"
            />

        <TextView
            android:id="@+id/day_forecast_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mayormente despejado"
            android:gravity="center"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorWhite"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end|center"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_upward"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:id="@+id/day_forecast_weather_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35°"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_downward"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:id="@+id/day_forecast_weather_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21°"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>